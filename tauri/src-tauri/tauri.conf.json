{
  "package": {
    "productName": "EchoSmith",
    "version": "0.1.0"
  },
  "tauri": {
    "bundle": {
      "identifier": "com.echosmith.app",
      "active": true,
      "targets": ["dmg", "msi", "nsis"],
      "resources": ["../../tauri_backend_dist/backend/*"],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "macOS": {
        "minimumSystemVersion": "10.13"
      }
    },
    "windows": [
      {
        "label": "main",
        "title": "闻见 · EchoSmith",
        "width": 1280,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "alwaysOnTop": false
      }
    ],
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": false
      }
    },
    "security": {
      "csp": null
    }
  },
  "build": {
    "beforeBuildCommand": "",
    "beforeDevCommand": "",
    "devPath": "http://localhost:5173",
    "distDir": "../../frontend/dist"
  }
}
