{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "EchoSmith",
  "version": "0.1.0",
  "identifier": "com.echosmith.app",
  "build": {
    "beforeBuildCommand": "",
    "beforeDevCommand": "pnpm -C ../frontend dev",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../frontend_resources"
  },
  "bundle": {
    "active": true,
    "targets": ["dmg"],
    "resources": ["backend"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.13"
    }
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "闻见 · EchoSmith",
        "width": 1280,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "alwaysOnTop": false
      }
    ],
    "security": {
      "csp": null
    }
  }
}
