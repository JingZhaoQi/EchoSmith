{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "EchoSmith",
  "version": "1.0.0",
  "identifier": "com.jingzhaoqi.echosmith",
  "build": {
    "beforeBuildCommand": "",
    "beforeDevCommand": "pnpm -C ../../frontend dev",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../../frontend/dist"
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "msi", "nsis"],
    "resources": ["backend"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.13",
      "entitlements": "entitlements.plist",
      "exceptionDomain": null,
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "http://timestamp.digicert.com",
      "tsp": false,
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      }
    }
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "闻见 · EchoSmith",
        "width": 1280,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "alwaysOnTop": false
      }
    ],
    "security": {
      "csp": null
    }
  }
}
